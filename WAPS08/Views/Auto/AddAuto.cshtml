@model WAPS08.Models.ViewModels.AddAutoViewModels
@{
    ViewBag.Title = "Agregar Autos";
    Layout = "~/Views/Shared/_LayoutAcceso.cshtml";
}

<h2> Agregar Auto</h2>


<div class="row">
    <br />

    <div class="col-md-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href = '@Url.Content("~/User/Add")'" value="Nuevo" />
    </div>

    <br />
    <br />
</div>

<div class="col-md-12">
    <br />
    <br />

    @using (Html.BeginForm("AddAuto", "Auto", FormMethod.Post, new { role = "form", @class = "" , enctype ="multipart/form-data"}))
    {
        //@Html.AntiForgeryToken()
        <div>
            <div>
                @Html.ValidationMessage("error", new { @class = "text-danger" })

                @Html.LabelFor(d => d.Marca)
                @Html.TextBoxFor(d => d.Marca, new { @class = "form-control" })
                @Html.ValidationMessage("Marca", new { @class = "text-danger" })
                <br />

                @Html.LabelFor(d => d.Modelo)
                @Html.TextBoxFor(d => d.Modelo, new { @class = "form-control" })
                @Html.ValidationMessage("Modelo", new { @class = "text-danger" })
                <br />

                @Html.LabelFor(d => d.Anio)
                @Html.TextBoxFor(d => d.Anio, new { @class = "form-control" })
                @Html.ValidationMessage("Anio", new { @class = "text-danger" })
                <br />
                @Html.LabelFor(d => d.Direccion)
                @Html.TextBoxFor(d => d.Direccion, new { @class = "form-control" })
                @Html.ValidationMessage("Direccion", new { @class = "text-danger" })

                @Html.LabelFor(d => d.TipoVehiculo)
                @Html.TextBoxFor(d => d.TipoVehiculo, new { @class = "form-control" })
                @Html.ValidationMessage("TipoVehiculo", new { @class = "text-danger" })

                @Html.LabelFor(d => d.Color)
                @Html.TextBoxFor(d => d.Color, new { @class = "form-control" })
                @Html.ValidationMessage("Color", new { @class = "text-danger" })

                s
                @Html.LabelFor(d => d.Precio)
                @Html.TextBoxFor(d => d.Precio, new { @class = "form-control" })
                @Html.ValidationMessage("Precio", new { @class = "text-danger" })
                <br />

                @Html.LabelFor(d => d.ImageFile)
                @Html.TextBoxFor(d => d.ImageFile, new { @class = "form-control", @type= "file" })
                @Html.ValidationMessage("Imagen", new { @class = "text-danger" })
                <br />



                
            </div>
            <div class="jumbotron">
                <div class="container">
                    <img src="@Url.Action("getImage","Home")" />
                </div>
            </div>
            <div style="text-align:left;">
                <input type="submit" value="Guardar" class="btn btn-success btn-lg" />
                <input type="button" value="Cargar Imagen" class="btn btn-primary btn-lg" />
                <input type="button" value="Volver Atras" class="btn btn-info btn-lg" onclick="document.location.href = '@Url.Content("~/auto/query")'" />
            </div>
        </div>


        <br />
        <br />
    }


</div>
