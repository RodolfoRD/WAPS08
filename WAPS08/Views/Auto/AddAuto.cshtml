@model WAPS08.Models.ViewModels.AddAutoViewModels
@{
    ViewBag.Title = "Agregar Autos";
    Layout = "~/Views/Shared/_LayoutAcceso.cshtml";
}

<h2> Agregar Auto</h2>


<div class="row">
    <br />

    <div class="col-md-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href = '@Url.Content("~/User/Add")'" value="Nuevo" />
    </div>

    <br />
    <br />
</div>

<div class="container-fluid">
    <div class="row ">

        @foreach (var oElemento in Model)
        {
            <div class="col-lg-4 cd">
                <div class="card shadow-sm">

                    <div class="card-body">


                        <h4>ID: @oElemento.Id </h4>
                        <label>Email <input type="text" value=@oElemento.Email disabled /></label>
                        <label>Edad  <input type="text" value=@oElemento.Edad disabled /></label>



                        <div class=" d-flex justify-content-between alingalign-items-center">
                            <div class="btn-group">
                                <input onclick="jsDelete(@oElemento.Id);"
                                       type="button"
                                       value="Borrar"
                                       class="btn btn-danger" />
                                <input onclick="document.location.href = '@Url.Content("~/User/Edit/" + oElemento.Id)'"
                                       type="button"
                                       value="Editar"
                                       class="btn btn-default" />
                            </div>


                        </div>
                    </div>
                </div>
            </div>



        }

    </div>
</div>











<div class="col-md-12">
    <br />
    <br />

    @using (Html.BeginForm("AddAuto", "Auto", FormMethod.Post, new { role = "form", @class = "" }))
    {
        //@Html.AntiForgeryToken()
        <div>
            <div>
                @Html.ValidationMessage("error", new { @class = "text-danger" })

                @Html.LabelFor(d => d.Marca)  
                @Html.TextBoxFor(d => d.Marca, new { @class = "form-control" })
                @Html.ValidationMessage("Marca", new { @class = "text-danger" })
                <br />

                @Html.LabelFor(d => d.Modelo)
                @Html.TextBoxFor(d => d.Modelo, new { @class = "form-control" })
                @Html.ValidationMessage("Modelo", new { @class = "text-danger" })
                <br />

                @Html.LabelFor(d => d.Anio)
                @Html.PasswordFor(d => d.Anio, new { @class = "form-control" })
                @Html.ValidationMessage("Agnio", new { @class = "text-danger" })
                <br />

                @Html.LabelFor(d => d.Imagen)
                @Html.PasswordFor(d => d.Imagen, new { @class = "form-control" })
                @Html.ValidationMessage("Imagen", new { @class = "text-danger" })
                <br />
            </div>
            <div class="jumbotron">
                <div class="container">
                    <img src="@Url.Action("getImage","Home")" />
                </div>
            </div>
            <div style="text-align:left;">
                <input type="submit" value="Guardar" class="btn btn-success btn-lg" />
                <input type="button" value="Cargar Imagen" class="btn btn-primary btn-lg" />
                <input type="button" value="Volver Atras" class="btn btn-info btn-lg" onclick="document.location.href = '@Url.Content("~/auto/query")'" />
            </div>
        </div>


        <br />
        <br />
    }


</div>
